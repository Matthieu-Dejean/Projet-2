{% extends 'layout.html.twig' %}
{% block figthers %}


    <div class="container-fluid">

        <h1> Ils ont reçu le plus de votes sur leurs chansons </h1>

        <div class="row">

            <ul class="pagination">

                {% set i = 0 %}
                <li class="col-10 col-lg-1 col-md-2 col-sm-3"></li>

                {% for key, user in fighters %}
                    {% set i = i + 1 %}
                    {% if i < 11 %}
                        <li class="col-10 col-lg-1 col-md-2 col-sm-6 container-fighter">
                            <div class="card card-fighters">

                                <button type="button" class="fighters-name" data-toggle="tooltip" data-placement="top"
                                        title="{{ user|e }} votes reçus">
                                    {{ key }}
                                </button>

                                <img {% if key %} src="https://avatars.githubusercontent.com/{{ key }}" {% else %} src="/assets/images/dj.jpeg" {% endif %}
                                        class="card-img-top" alt="image of a DJ">
                                <p class="netflix-number card-text">{{ i }}</p>
                            </div>
                        </li>

                    {% endif %}
                {% endfor %}

                <li class="col-10 col-lg-1 col-md-2 col-sm-3"></li>
            </ul>
            <div class="col-3 col-md-1 col-lg-2 col-sm-6"></div>
            <div class="text-center col-4 col-md-10 col-lg-8">
                <button class="align-items-center dropdown-toggle alert alert-dark" type="button" id="dropdownMenu2"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Voir le classement de tous les contributeurs .. sur un total de {{ totalPower.total }} votes reçues
                </button>
                <div class="dropdown-menu " aria-labelledby="dropdownMenu2">
                    <ul class="list-group">

                        {% set j = 0 %}
                        {% for key, user in fighters %}
                            {% set j = j + 1 %}
                            <li class="list-group-item"><span class="dropdown-item-text"> {{ j }} <img
                                            class="rounded-circle" {% if key %} src="https://avatars.githubusercontent.com/{{ key }}" {% else %} src="/assets/images/dj.jpeg" {% endif %}</span>
                                {% if user %}{{ key }} , a reçu  {{ user }}  votes sur les chansons qu'il a posté.{% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-3 col-md-1 col-lg-2 col-sm-6"></div>
        </div>
    </div>

{% endblock %}
