<div class ="row badgeHidden" id="badge-dynamique">
    <div class="col-lg-4"></div>
    <div class="alert alert-success alert-dismissible fade show col-lg-4" role="alert">
        <i class="start-icon fa fa-thumbs-up"></i>
        <strong class="badgeAttributed"> Badge attribué !</strong> <br>
        <p class="badgeAttributed" id="badge-name"></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="col-lg-4"></div>
</div>




{% if badges | length > 0 %}
    {% for badge in badges  %}
        {% if badge != ''%}
            <div class ="row">
                <div class="col-lg-4"></div>
                <div class="alert alert-success alert-dismissible fade show col-lg-4" role="alert">
                    <i class="start-icon fa fa-thumbs-up"></i>
                    <strong class="badgeAttributed"> Badge attribué !</strong> <br>
                    <p class="badgeAttributed">{{ badge }} </p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="col-lg-4"></div>
            </div>
        {% endif %}
    {% endfor %}
{% endif %}